<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web_progress.ProgressMenu">
        <li class="o_mail_systray_item">
            <a class="dropdown-toggle o-no-caret" data-toggle="dropdown" data-display="static" aria-expanded="false" title="Progress" href="#" role="button">
                <i class="fa fa-spinner"/> <span class="o_notification_counter badge badge-pill"/>
            </a>
            <div class="o_mail_systray_dropdown dropdown-menu dropdown-menu-right" role="menu">
                <div class="o_mail_systray_dropdown_items"/>
            </div>
        </li>
    </t>
    
    <t t-name="web_progress.ProgressMenuPreview">
        <t t-if="_.isEmpty(progress_data)">
            <div class="dropdown-item-text text-center o_no_activity">
                <span>No operations in progress.</span>
            </div>
        </t>
        <t t-foreach="progress_data" t-as="progress">
            <div class="o_mail_preview">
                <div class="o_mail_preview_image o_mail_preview_app">
                    <button class="btn fa fa-square progress_cancel_button" t-att-id="progress.code" style="visibility:hidden"/>
                </div>
                <div class="o_preview_info">
                    <div class="o_preview_title">
                        <span class="o_preview_name">
                            &amp;nbsp;<t t-esc="progress.msg"/>&amp;nbsp;
                        </span>
                        <span class="o_channel_counter">
                            <t t-esc="progress.progress"/>%&amp;nbsp;
                        </span>
                        <span class="o_last_message_date">
                            <t t-esc="progress.done"/>/<t t-esc="progress.total"/>&amp;nbsp;
                        </span>
                    </div>
                </div>
            </div>
        </t>
    </t>

</templates>
