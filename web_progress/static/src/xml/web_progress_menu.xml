<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web_progress.ProgressMenu">
        <li class="o_mail_navbar_item">
            <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false" title="Progress" href="#">
                <i class="fa fa-spinner"/> <span class="o_notification_counter badge"/>
            </a>
            <ul class="o_progress_navbar_dropdown dropdown-menu" role="menu">
                <li class="o_progress_navbar_dropdown_channels"/>
            </ul>
        </li>
    </t>
    
    <t t-name="web_progress.ProgressMenuPreview">
        <t t-if="_.isEmpty(progress_data)">
            <li class="text-center o_no_progress">
                <span>No operations in progress.</span>
            </li>
        </t>
        <t t-foreach="progress_data" t-as="progress">
            <div class="o_mail_channel_preview">
                <div class="o_channel_info">
                    <div class="o_channel_title">
                        <span class="o_channel_name">
                            <t t-esc="progress.msg"/>&amp;nbsp;
                        </span>
                        <span class="o_channel_counter">
                            <t t-esc="progress.progress"/>%&amp;nbsp;
                        </span>
                        <span class="o_last_message_date">
                            <t t-esc="progress.done"/>/<t t-esc="progress.total"/>
                        </span>
                        <button class="fa fa-square" id="progress_cancel"/>
                    </div>
                </div>
            </div>
        </t>
    </t>

</templates>
